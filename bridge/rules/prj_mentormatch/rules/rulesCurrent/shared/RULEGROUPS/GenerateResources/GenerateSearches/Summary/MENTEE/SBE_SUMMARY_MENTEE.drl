rule "SBE_SUMMARY_MENTEE"
   ruleflow-group 'GenerateSearches'
   no-loop true
   when
      not  SearchEntity (code == "SBE_SUMMARY_MENTEE")
      serviceToken : GennyToken( code == "PER_SERVICE")
   then
     	System.out.println("   Generate "+drools.getRule().getName() );

      SearchEntity searchBE = new SearchEntity(drools.getRule().getName(), "My Profile")
                              .addFilter("PRI_IS_MENTEE", true)

                              /* Columns */
                                .addColumn("PRI_FIRSTNAME", "First Name")
                                .addColumn("PRI_LASTNAME", "Last Name")
                                .addColumn("PRI_EMAIL", "Email")
                                .addColumn("PRI_MOBILE", "Mobile")
                                .addColumn("PRI_LINKEDIN_PROFILE_URL", "LinkedIn")
                     			.addColumn("PRI_STATUS", "Status")
                     			.addColumn("PRI_TRAINING_STATUS", "Training Status")
                                .addAssociatedColumn("LNK_MM_INDUSTRY", "PRI_NAME", "Industry")
                                .addAssociatedColumn("LNK_HOBBIES_INTEREST", "PRI_NAME", "Hobbies and Interest")
                              /* Actions */
                        		.addAction("PRI_EVENT_EDIT", "Edit")

                              /* Display Mode */
                              .setDisplayMode("my_profile")
                              .setPageStart(0).setPageSize(1);

      searchBE.setRealm(serviceToken.getRealm());

      insert(searchBE);
      VertxUtils.putObject(serviceToken.getRealm(), "", searchBE.getCode(), searchBE, serviceToken.getToken());

end
