import java.util.List;
import life.genny.utils.SessionFacts;

rule "NEXT_QUESTION"
    ruleflow-group 'EventProcessing'
		salience 3
    no-loop
    when
		$message : QEventMessage ( ( data.code == "QUE_NEXT_BTN" ) && ( data.parentCode matches "QUE_STT_.*_GRP" ) )
		userToken : GennyToken (code != "PER_SERVICE" )
		serviceToken : GennyToken (code == "PER_SERVICE" )
		output : OutputParam( )
		ruleDetails : RuleDetails()
		
    then		
		System.out.println("NEXT_QUESTION : Rule Fired!");
		
		/* Send a Signal */
		output.setTypeOfResult("SIGNAL");
		
		/* Signal to send */
		output.setResultCode("START_NEXT_QUESTION");

		output.setTargetCode("NEXT_EVENT:" + $message.getData().getParentCode());
				
		System.out.println("START SIGNAL: START_NEXT_QUESTIONN");
		System.out.println("STARTING THE NEXT QUESTION WITH: " +output);
	
		retract( $message);
	end
