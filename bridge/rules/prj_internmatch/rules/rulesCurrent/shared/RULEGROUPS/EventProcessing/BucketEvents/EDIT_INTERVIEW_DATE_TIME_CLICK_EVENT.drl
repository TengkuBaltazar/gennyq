rule "EDIT_INTERVIEW_DATE_TIME_CLICK_EVENT"
	ruleflow-group 'EventProcessing'
	salience 2
	no-loop
	when
		$message : QEventMessage(data.code matches "ACT_PRI_EVENT_EDIT_INTERVIEW_APPLICATION" )
		userToken : GennyToken (code != "PER_SERVICE" )
		serviceToken : GennyToken (code == "PER_SERVICE" )
		output : OutputParam( )
		ruleDetails : RuleDetails()
	then
		System.out.println(drools.getRule().getName() + " triggered");

		String targetCode = $message.getData().getTargetCode();
		if(targetCode == null){
			System.out.println("targetCode is null");
			return;
		}

		output.setTypeOfResult("SIGNAL");
		output.setResultCode("START_INTERVIEW");
		output.setTargetCode(targetCode);
		
		SessionFacts facts = new SessionFacts(serviceToken, userToken, targetCode);
		retract( $message);
	end
