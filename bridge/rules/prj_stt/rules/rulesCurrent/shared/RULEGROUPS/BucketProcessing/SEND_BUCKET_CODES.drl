package life.genny.rules;
import java.util.ArrayList;
import life.genny.qwandautils.JsonUtils;
import life.genny.utils.OutputParam;
import life.genny.qwanda.message.QDataAskMessage;
import life.genny.qwanda.message.QEventMessage;
import life.genny.models.GennyToken;
import life.genny.utils.VertxUtils;
import io.vertx.core.json.JsonObject;
import life.genny.utils.OutputParam;
import life.genny.utils.BucketUtils;
import life.genny.models.ThemePosition;
import life.genny.models.ThemeAttributeType;
import life.genny.utils.TableUtils;
import org.drools.core.spi.KnowledgeHelper;
import life.genny.qwanda.datatype.Allowed;

rule "SEND_BUCKET_CODES"
	ruleflow-group 'BucketProcessing'
	salience 10
	no-loop true
	when
		userToken : GennyToken (code != "PER_SERVICE" )
		serviceToken : GennyToken( code == "PER_SERVICE")
		output : OutputParam( )

	then
		System.out.println(drools.getRule().getName() + " triggered");
		Boolean cache = true;
		BaseEntityUtils beUtils = new BaseEntityUtils(serviceToken, userToken);
  
		String sessionCode= beUtils.getGennyToken().getSessionCode().toUpperCase();
		System.out.println("sessionCode   ::   " + sessionCode);

		List<String> codes = new ArrayList<String>();
		if(sessionCode != null){
			codes.add("SBE_BUCKET_REGISTERED_"+sessionCode);
			codes.add("SBE_BUCKET_SCENARIO_ONE_"+sessionCode);
			codes.add("SBE_BUCKET_SCENARIO_TWO_"+sessionCode);
			codes.add("SBE_BUCKET_SCENARIO_THREE_"+sessionCode);
			codes.add("SBE_BUCKET_SCENARIO_FOUR_"+sessionCode);
			codes.add("SBE_BUCKET_SCENARIO_FIVE_"+sessionCode);
			codes.add("SBE_BUCKET_SCENARIO_SIX_"+sessionCode);
			codes.add("SBE_BUCKET_SCENARIO_SEVEN_"+sessionCode);
			codes.add("SBE_BUCKET_SCENARIO_EIGHT_"+sessionCode);
			codes.add("SBE_BUCKET_SCENARIO_NINE_"+sessionCode);
			codes.add("SBE_BUCKET_SCENARIO_TEN_"+sessionCode);
			codes.add("SBE_BUCKET_COMPLETED_"+sessionCode);
		}

		/* Send bucket arrayCodes */
		QCmdMessage msg = new QCmdMessage("BUCKET_CODES", "BUCKET_CODES");
		msg.setTargetCodes(codes);
		msg.setToken(beUtils.getGennyToken().getToken());
		msg.setSend(true);  		
		VertxUtils.writeMsg("webcmds",msg);

		output.setTypeOfResult("NONE");
		output.setResultCode("NONE");  /* dont display anything new */

end
