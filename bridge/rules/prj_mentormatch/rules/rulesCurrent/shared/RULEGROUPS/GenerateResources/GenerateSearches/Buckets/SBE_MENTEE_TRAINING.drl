rule "SBE_MENTEE_TRAINING"
	ruleflow-group 'GenerateSearches'
	no-loop true
	when
		not SearchEntity (code == "SBE_MENTEE_TRAINING")
		serviceToken : GennyToken( code == "PER_SERVICE")
	then
		System.out.println("   Generate "+drools.getRule().getName() );

		SearchEntity searchBE = new SearchEntity("SBE_MENTEE_TRAINING", "Training")
						/* Sorts */
						/*.addSort("PRI_CREATED", "Created", SearchEntity.Sort.DESC) NO PRI_CREATED attribute in BE*/

						/* Filters */
						.addFilter("PRI_CODE", SearchEntity.StringFilter.LIKE, "PER_%")
						.addFilter("PRI_STATUS", SearchEntity.StringFilter.LIKE, "TRAINING")
						.addFilter("PRI_TRAINING_STATUS", SearchEntity.StringFilter.LIKE, "COMPLETE")
						.addFilter("PRI_IS_MENTEE", true)

						/* Columns */
						.addColumn("PRI_NAME", "Name")
						.addColumn("PRI_MOBILE", "Mobile")
						.addColumn("PRI_EMAIL", "Email")
						.addColumn("PRI_TRAINING_STATUS", "Training Status")

						/* Display Code */
						.setDisplayMode("CARD:MAIN_2")

						/* Actions */
						.addAction("PRI_EVENT_VIEW", "View Profile")
						/*.addAction("PRI_EVENT_SELECT_MENTOR", "Select Mentor")*/
						.setPageStart(0).setPageSize(15);

		searchBE.setRealm(serviceToken.getRealm());

		insert(searchBE);
		VertxUtils.putObject(serviceToken.getRealm(), "", searchBE.getCode(), searchBE, serviceToken.getToken());

end
