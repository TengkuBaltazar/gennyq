rule "SBE_OFF_SHORE"
	ruleflow-group 'GenerateSearches'
	no-loop true
	when
		not SearchEntity (code == "SBE_OFF_SHORE")
		serviceToken : GennyToken( code == "PER_SERVICE")
	then
		System.out.println("   Generate "+drools.getRule().getName() );

		SearchEntity searchBE = new SearchEntity("SBE_OFF_SHORE", "Off-Shore")
						/* Filters */
						.addFilter("PRI_CODE", SearchEntity.StringFilter.LIKE, "PER_%")
						.addFilter("LNK_ON_OR_OFF_SHORE", SearchEntity.StringFilter.EQUAL, "[\"SEL_OFFSHORE\"]")
						.addFilter("PRI_IS_MENTEE", true)

						/* Columns */
						.addColumn("PRI_NAME", "Name")
						.addColumn("PRI_MOBILE", "Mobile")
						.addColumn("PRI_EMAIL", "Email")

						.addColumn("PRI_USER_PROFILE_PICTURE", " ")

						/* Display Code */
						.setDisplayMode("CARD:MAIN_2")

						/* Actions */
						.addAction("PRI_EVENT_VIEW", "View Profile")
						.setPageStart(0).setPageSize(15);

		searchBE.setRealm(serviceToken.getRealm());

		insert(searchBE);
		VertxUtils.putObject(serviceToken.getRealm(), "", searchBE.getCode(), searchBE, serviceToken.getToken());

end
